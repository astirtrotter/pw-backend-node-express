extends ../default

block content
  h1.mb-4 #{title}
  if user.meta.admin
    .d-flex.flex-row.justify-content-end
      button.btn.btn-primary(type='button', data-toggle='modal', data-target='#serviceModal') New service
  table.mt-4.table.table-striped.table-hover.table-responsive-md
    thead
      tr
        th(scope='col') #
        th(scope='col') Name
        th(scope='col') Image
        th(scope='col') Description
        if user.meta.admin
          th(scope='col') Action
    tbody
      each service, index in services
        tr
          th(scope='row') #{index + 1}
          td #{service.name}
          td
            img.img-fluid(src=`/assets/services/${service._id}`, onerror=`this.src='/assets/services/_default'`)
          td #{service.description}
          if user.meta.admin
            td
              .btn.text-danger.mr-1(onclick=`confirmDeleting('/api/services/${service._id}/delete')`)
                span.fas.fa-trash-alt
              .btn.ml-1.text-primary(data-toggle='modal', data-target='#serviceModal', data-service=service)
                span.fas.fa-edit
  #serviceModal.modal.fade(tabindex='-1', role='dialog', aria-labelledby='serviceModalLabel', aria-hidden='true')
    .modal-dialog.modal-dialog-centered(role='document')
      .modal-content
        .modal-header
          h5#serviceModalLabel.modal-title New/Edit Service
          button.close(type='button', data-dismiss='modal', aria-label='Close')
            span(aria-hidden='true') Ã—
        .modal-body
          form#serviceModalForm(method='POST', encType='multipart/form-data')
            img.img-fluid(src='#', onerror=`this.src='/assets/services/_default'`)
            input(type='file', name='image', accept='image/png, image/jpeg')
            br
            br
            label.mt-2(for='serviceNameInput') Name
            input#serviceNameInput.form-control(type='text', name='name')
            label.mt-2(for='serviceDescriptionInput') Description
            input#serviceDescriptionInput.form-control(type='text', name='description')
        .modal-footer
          button.btn.btn-secondary(data-dismiss='modal') Cancel
          button.btn.btn-primary(onclick=`serviceModalForm.submit()`) Submit